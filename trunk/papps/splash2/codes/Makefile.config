CC := gcc
CFLAGS := -O2 -pthread -D_POSIX_C_SOURCE=200112
#CFLAGS := -g3 -pthread -D_POSIX_C_SOURCE=200112
CFLAGS := $(CFLAGS) -Wall -W -Wmissing-prototypes -Wmissing-declarations -Wredundant-decls -Wdisabled-optimization
CFLAGS := $(CFLAGS) -Wpadded -Winline -Wpointer-arith -Wsign-compare -Wendif-labels 
LDFLAGS := -lm

BASEDIR := $(HOME)/Papers/cs523/dpthread/papps/splash2/codes
DPTHREADDIR := $(HOME)/Papers/cs523/dpthread
PFMLIBDIR := $(HOME)/Papers/cs523/libpfm4
# MACROS := $(BASEDIR)/null_macros/c.m4.null.POSIX_BARRIER
MACROS := $(BASEDIR)/null_macros/c.m4.null.det

CFLAGS += -I$(DPTHREADDIR)/include -g 
LDFLAGS += -L$(DPTHREADDIR)/lib -ldpthread -L$(PFMLIBDIR)/lib -lpfm -ldl 

M4 := m4 -s -Ulen -Uindex

x = *

$(TARGET): $(OBJS)
	$(CC) $(OBJS) $(CFLAGS) -o $(TARGET) $(LDFLAGS)

clean:
	rm -rf *.c *.h *.o $(TARGET) log*.p* *~ 

.SUFFIXES:
.SUFFIXES:	.o .c .C .h .H

.H.h:
	$(M4) $(MACROS) $*.H > $*.h

.C.c:
	$(M4) $(MACROS) $*.C > $*.c

.c.o:
	$(CC) -c $(CFLAGS) $*.c

.C.o:
	$(M4) $(MACROS) $*.C > $*.c
	$(CC) -c $(CFLAGS) $*.c
